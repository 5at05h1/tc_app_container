{
  "expo": {
    "name": "TC",
    "slug": "totalcloud",
    "version": "2.1.3", //20220615更新
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "notification": {
      // androidの通知アイコン
      "icon": "./assets/notificationicon.png"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.totalcloud.totalcloud",
      "googleServicesFile": "./GoogleService-Info.plist",
      "buildNumber": "2.1.3", //20220615更新
      "infoPlist": {
        "UIRequiresFullScreen": "YES",
        "CFBundleDevelopmentRegion": "ja_JP",
        "NSPhotoLibraryUsageDescription": "プロフィールに写真を登録するのに使用します",
        "NSCameraUsageDescription": "オンライン通話にカメラを使用します",
        "NSMicrophoneUsageDescription": "オンライン通話にマイクを使用します"
        // "NSLocationAlwaysUsageDescription": "このソフトウェアは使用しません",
        // "NSLocationUsageDescription": "このソフトウェアは使用しません",
        // "NSLocationWhenInUseUsageDescription": "このソフトウェアは使用しません",
        // "NSUserTrackingUsageDescription": "このソフトウェアは使用しません"
      },
      "supportsTablet": true
    },
    "android": {
      "versionCode": 30, //20220615更新
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_CONTACTS",
        "READ_EXTERNAL_STORAGE",
        "VIBRATE",
        "com.anddoes.launcher.permission.UPDATE_COUNT",
        "com.android.launcher.permission.INSTALL_SHORTCUT",
        "com.google.android.c2dm.permission.RECEIVE",
        "com.google.android.gms.permission.ACTIVITY_RECOGNITION",
        "com.google.android.providers.gsf.permission.READ_GSERVICES",
        "com.htc.launcher.permission.READ_SETTINGS",
        "com.htc.launcher.permission.UPDATE_SHORTCUT",
        "com.majeur.launcher.permission.UPDATE_BADGE",
        "com.sec.android.provider.badge.permission.READ",
        "com.sec.android.provider.badge.permission.WRITE",
        "com.sonyericsson.home.permission.BROADCAST_BADGE"
      ],
      "package": "com.totalcloud.totalcloud",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
